<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>disable</Nullable>
        <UseWpf>true</UseWpf>
        <Authors>Oliver Kleinert</Authors>
        <Description>A MessageBox alternative for WPF.</Description>
        <Copyright>Copyright (c) 2022 Oliver Kleinert</Copyright>
        <TargetFramework>netcoreapp3.1-windows</TargetFramework>
        <UseWpf>true</UseWpf>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>AvalonMessageBox</Title>
        <PackageTags>WPF MessageBox message box avalon</PackageTags>
        <PackageProjectUrl>https://github.com/ol1ver/AvalonMessageBox</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/ol1ver/AvalonMessageBox/blob/master/LICENSE</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/ol1ver/AvalonMessageBox</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageVersion>1.0.1</PackageVersion>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>

</Project>
